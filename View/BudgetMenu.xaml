<Window x:Class="View.BudgetMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="BudgetMenu" Height="450" Width="800">
    <Grid>
        <DataGrid Name="BudgetDataGrid" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="518" ItemsSource="{Binding Budgets}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Medarbejder Navn" Binding="{Binding Employee.Name}" IsReadOnly="False"/>
                <DataGridTextColumn Header="Min Budget" Binding="{Binding MinBudget}" IsReadOnly="False"/>
                <DataGridTextColumn Header="Mix Budget" Binding="{Binding MaxBudget}" IsReadOnly="False"/>
                <DataGridTextColumn Header="Current" Binding="{Binding CurrentBudget}" IsReadOnly="False"/>

            </DataGrid.Columns>
            
        </DataGrid>
        
    </Grid>
</Window>
